# Azure Retail Analytics Pipeline - Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# Azure Subscription
AZURE_SUBSCRIPTION_ID="your-subscription-id"
AZURE_SUBSCRIPTION_NAME="your-subscription-name"

# Resource Configuration
RESOURCE_GROUP="rg-retail-analytics"
LOCATION="centralus"

# Storage Account
STORAGE_ACCOUNT="your-storage-account-name"
STORAGE_KEY="your-storage-account-key"

# Synapse Workspace
SYNAPSE_WORKSPACE="your-synapse-workspace-name"
SQL_ADMIN_USER="sqladminuser"
SQL_ADMIN_PASSWORD="Password123!"

# Containers
CONTAINER_BRONZE="bronze"
CONTAINER_SILVER="silver"
CONTAINER_GOLD="gold"

# Spark Pool
SPARK_POOL_NAME="sparkpool"

# GitHub (for data source)
GITHUB_USERNAME="your-github-username"
GITHUB_REPO="azure-retail-data-source"
GITHUB_RAW_URL="https://raw.githubusercontent.com/Daniel-jcVv/azure-retail-transactions-api/refs/heads/main/data-source/retail_transactions_bronze.json"
